// Place your key bindings in this file to overwrite the defaults
[
    //Estilo de parágrafo
    {
        "key": "ctrl+shift+p",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<p class='c-paragraph u-title--medium'>${TM_SELECTED_TEXT}</p>"
        }
    },
    //Estilo de parágrafo centralizado
    {
        "key": "ctrl+shift+alt+p",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<p class='c-paragraph u-title--medium u-centered'>${TM_SELECTED_TEXT}</p>"
        }
    },
    //Itálico  
    {
        "key": "ctrl+shift+e",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<em>${TM_SELECTED_TEXT}</em>"
        }
    },
    //Bold  
    {
        "key": "ctrl+shift+b",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<strong>${TM_SELECTED_TEXT}</strong>"
        }
    },
    //Bold itálico  
    {
        "key": "ctrl+shift+n",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<strong><em>${TM_SELECTED_TEXT}</em></strong>"
        }
    },
    //link  
    {
        "key": "ctrl+shift+l",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<a href= \"javascript:void(0);\"onclick=\"openInNewTab('${1}');\">${TM_SELECTED_TEXT}</a>"
        }
    },
    //link DS
    {
        "key": "ctrl+alt+shift+l",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<a class=\"c-link u-text-medium\">${TM_SELECTED_TEXT}</a>"
        }
    },
    //link modal (DS)
    {
        "key": "ctrl+shift+m",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": " <a id=\"open-modal-01\" class=\"modal c-link\">${TM_SELECTED_TEXT}</a>"
        }
    },
    //texto math
    {
        "key": "ctrl+shift+w",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<span class='mjx-text'>${TM_SELECTED_TEXT}</span>"
        }
    },
    //número da equação
    {
        "key": "ctrl+shift+q",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<span class='c-tag u-round-corners bg-primary-30'><strong>${TM_SELECTED_TEXT}</strong></span>"
        }
    },
    //gerador de uuid
    {
        "key": "ctrl+alt+a",
        "command": "uuid.generate"
    },
    //equação
    {
        "key": "ctrl+shift+c",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "$${TM_SELECTED_TEXT}$"
        }
    },
    // Texto inferior
    {
        "key": "ctrl+alt+d",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<sub>${TM_SELECTED_TEXT}</sub>"
        }
    },
    // Texto superior
    {
        "key": "ctrl+alt+s",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<sup>${TM_SELECTED_TEXT}</sup>"
        }
    },
    // Span
    {
        "key": "ctrl+shift+alt+s",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<span>${TM_SELECTED_TEXT}</span>"
        }
    },
    // Tooltip
    {
        "key": "ctrl+shift+t",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<a data-toggle='tooltip' title='' data-original-title='Default tooltip'><u>${TM_SELECTED_TEXT}</u></a>"
        }
    }
]